<div class="clearfix">

  <div class="sm-col sm-col-3">
  <%= render partial:"/partials/profile_info" %>
  </div>

  <div class="sm-col sm-col-9">
    <%= render partial: "/partials/on_page_nav" %>


    <h2>Repos</h2>

    <div class="clearfix">
      <div class="col col-3">
        <p> Name </p>
      </div>
      <div class="col col-2">
        <p> Language </p>
      </div>
      <div class="col col-2">
        <p> Created on </p>
      </div>
      <div class="col col-1">
        <p> Stargazers</p>
      </div>
    </div>

    <% @github_presenter.repos.each do |repo| %>
      <div class="repos">
        <div class="clearfix commit-row">
          <div class="col col-3">
            <p class="name"><%= link_to repo.name, repo.html_url, class:"repo-link-text" %></p>
          </div>
          <div class="col col-2">
            <% if repo.language == "Ruby" %>
                <p><i class="far fa-gem"></i>  <%= repo.language %></p>
            <% else %>
              <p><%= repo.language %></p>
            <% end %>
          </div>
          <div class="col col-2">
            <p><%= repo.created_at %></p>
          </div>
          <div class="col col-1">
            <p><%= repo.stargazers_count %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
